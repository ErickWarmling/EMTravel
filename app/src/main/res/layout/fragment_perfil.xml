<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Conteúdo scrollável -->
    <ScrollView
        android:id="@+id/scrollPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Área centralizada: Foto e Nome -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/imgFotoPerfil"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_perfil"
                        android:background="@drawable/bordas_arredondadas_edit_text"
                        android:padding="16dp"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/btnEditarFoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_camera"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Editar foto"
                        app:tint="@color/azul_escuro" />

                    <!-- Novo botão de remover foto -->
                    <ImageButton
                        android:id="@+id/btnRemoverFoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Remover foto"
                        app:tint="@color/red" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tvNomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erick Augusto Warmling"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_escuro"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Área alinhada à esquerda: dados do usuário (com ícones) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="36dp">

                <!-- E-mail -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" E-mail:"
                        android:textStyle="bold"
                        android:textColor="@color/azul_escuro"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEmailUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="warmling.erick@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="18dp"
                    android:paddingStart="36dp" />

                <!-- Telefone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Telefone:"
                        android:textStyle="bold"
                        android:textColor="@color/azul_escuro"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTelefoneUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(49) 99999-9999"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="18dp"
                    android:paddingStart="36dp" />

                <!-- Data de Nascimento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Data de Nascimento:"
                        android:textStyle="bold"
                        android:textColor="@color/azul_escuro"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDataNascimentoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03/03/2005"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="36dp" />

                <!-- Botão Sair -->
                <Button
                    android:id="@+id/btnSair"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Sair"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="12dp"
                    android:paddingVertical="10dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
